extends layouts/main

block missHead

  // Adsense
  script(data-ad-client='ca-pub-7663681425693792' async='' src='https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')

  meta(name='description' content='Artículos de ciencia con chispas de chocolate. Artículos de difusión científica y sobre curiosidades.')
  link(rel='canonical' href=HOST)
  title Science Cookies - Artículos de ciencia con chispas de chocolate 

  - const site="index";

block content
  #calMain.container-fluid.mb-4.rounded-lg.p-3.d-none
  form#frmSrch.mb-4
    .rounded.mb-1.pl-2.pt-1.cats-container
      .from-row
        label(for='cats') Categorías
        .form-check
          input#catA.form-check-input(type='checkbox')
          label.form-check-label(for='catA') Todas
      // Categorías@#
      .form-row.justify-content-around
        .form-group.col-auto
          .form-check
            input#cat0.form-check-input(type='checkbox' value='astronomia')
            label.form-check-label(for='cat0') Astronomía
        .form-group.col-auto
          .form-check
            input#cat1.form-check-input(type='checkbox' value='biologia')
            label.form-check-label(for='cat1') Biología
        .form-group.col-auto
          .form-check
            input#cat2.form-check-input(type='checkbox' value='curiosidades')
            label.form-check-label(for='cat2') Curiosidades
        .form-group.col-auto
          .form-check
            input#cat3.form-check-input(type='checkbox' value='fisica')
            label.form-check-label(for='cat3') Física
        .form-group.col-auto
          .form-check
            input#cat4.form-check-input(type='checkbox' value='tecnologia')
            label.form-check-label(for='cat4') Tecnología
    .input-group
      input#srcBox.form-control(type='text' placeholder='Buscar galletas...' aria-describedby='frmBtns' maxlength='100')
      #frmBtns.input-group-append
        select#inOrd.custom-select.rounded-0
          option#inSrchOrd1(value='new') Más nuevo
          option#inSrchOrd2(value='old') Más viejo
          option#inSrchOrd3(value='pop') Más popular
        button.btn.btn-outline-light(type='submit')
          i.fas.fa-search
  nav#pgNavT.d-none(aria-label='pageNavT')
    ul.pagination.justify-content-end
      li.page-item
        button#pgTPrv.page-link.text-light.bg-transparent(aria-label='pgTPrv')
          span(aria-hidden='true') «
      li.page-item
        span#disPgT.page-link.text-light.bg-transparent 1
      li.page-item
        button#pgTNxt.page-link.text-light.bg-transparent(aria-label='pgTNxt')
          span(aria-hidden='true') »

  #cookiesCont

  nav#pgNavB.d-none(aria-label='pageNavB')
    ul.pagination.justify-content-end
      li.page-item
        button#pgBPrv.page-link.text-light.bg-transparent(aria-label='pgBPrv')
          span(aria-hidden='true') «
      li.page-item
        span#disPgB.page-link.text-light.bg-transparent 1
      li.page-item
        button#pgBNxt.page-link.text-light.bg-transparent(aria-label='pgBNxt')
          span(aria-hidden='true') »

block ownjs
  script(src='/js/index.js')
