include config
block lang

doctype html
html(lang=LANG)
  head
    include ../includes/head

    block missHead

    if site!="cookie" && site!="cal" && site!="allCalsM" && site!="allCalsY" && site!="cook" && site!="cookTri" && site!="mailPrev"
      link(rel="alternate" hreflang="es" href=HOST+'/'+NavLinks["es"][site])
      link(rel="alternate" hreflang="en" href=HOST+'/'+NavLinks["en"][site])
      link(rel="alternate" hreflang="x-default" href=HOST+'/'+NavLinks["es"][site])
      meta(property="og:url" content=href=HOST+'/'+NavLinks[LANG][site])

      if site=="index"
        if LANG=="es" 
          title Science Cookies - Artículos de ciencia con chispas de chocolate
          meta(property="og:title" content='Science Cookies - Artículos de ciencia con chispas de chocolate')
        else if LANG=="en" 
          title Science Cookies - Science articles with chocolate chips
          meta(property="og:title" content='Science Cookies - Science articles with chocolate chips')
        meta(property="og:image" content=HOST+"/img/logoT.svg")
      else 
        title Science Cookies - #{Buttons[LANG][site]}
        meta(property="og:title" content='Science Cookies - '+Buttons[LANG][site])

    script.
      window.site = "#{site}";
      window.lang = "#{LANG}";

    link(rel="stylesheet" href=HOST+"/styles/main.css")

  body
    include ../includes/nav

    include ../includes/register

    block precontent

    .container-fluid.text-white.page-container
      .row.justify-content-around

        include ../includes/sidebarL

        #cookCnt.col-12.col-sm-9.col-md-6.col-xl-7.py-md-3.pl-md-3
          include ../includes/banner
          block content

        include ../includes/adsV

      include ../includes/adsH

    include ../includes/foot

    include ../includes/bottom

    script(src=HOST+'/js/global.js')
    block ownjs