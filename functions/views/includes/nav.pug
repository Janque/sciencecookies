    a.navbar-brand(href=HOST+'/') Science Cookies
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarM' aria-controls='navbarM' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
    #navbarM.collapse.navbar-collapse
        ul.navbar-nav.mr-auto.py-0
            if site=="index"
                a.btn.btn-dark.mx-2.my-1.active(href=HOST+'/') #{Buttons[LANG]["index"]}
            else
                a.btn.btn-dark.mx-2.my-1(href=HOST+'/') #{Buttons[LANG]["index"]}
            if site=="cook"
                a.btn.btn-dark.mx-2.my-1.active(href=HOST+'/'+NavLinks[LANG]["cook"]) #{Buttons[LANG]["cook"]}
            else
                a.btn.btn-dark.mx-2.my-1(href=HOST+'/'+NavLinks[LANG]["cook"]) #{Buttons[LANG]["cook"]}
            if site=="allCalsY"
                a.btn.btn-dark.mx-2.my-1.active(href=HOST+'/'+NavLinks[LANG]["cal"]) #{Buttons[LANG]["cal"]}
            else
                a.btn.btn-dark.mx-2.my-1(href=HOST+'/'+NavLinks[LANG]["cal"]) #{Buttons[LANG]["cal"]}
            .dropdown.d-flex.flex-column
                if LANG=="es"
                    button.btn.btn-dark.mx-2.my-1.flex-fill#usBtnsDrpdwn(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Nosotros
                else if LANG=="en"
                    button.btn.btn-dark.mx-2.my-1.flex-fill#usBtnsDrpdwn(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Us
                .dropdown-menu.bg-sc.px-0.mb-2.py-1(aria-labelledby="usBtnsDrpdwn" style="min-width:max-content;")
                    .col-12.px-0.d-flex
                        if site=="who"
                            a.btn.btn-dark.mx-2.my-1.flex-fill.active(href=HOST+'/'+NavLinks[LANG]["who"]) #{Buttons[LANG]["who"]}
                        else
                            a.btn.btn-dark.mx-2.my-1.flex-fill(href=HOST+'/'+NavLinks[LANG]["who"]) #{Buttons[LANG]["who"]}
                    .col-12.px-0.d-flex
                        if site=="contact"
                            a.btn.btn-dark.mx-2.my-1.flex-fill.active(href=HOST+'/'+NavLinks[LANG]["contact"]) #{Buttons[LANG]["contact"]}
                        else
                            a.btn.btn-dark.mx-2.my-1.flex-fill(href=HOST+'/'+NavLinks[LANG]["contact"]) #{Buttons[LANG]["contact"]}
            if site=="edit"||site=="editCal"
                i.text-light.mx-3.my-auto#tagLstSave
