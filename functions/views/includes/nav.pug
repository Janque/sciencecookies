                if site!="cookie" && site!="cal"
                    if LANG=="es"
                        button#changeLang.btn.btn-link.text-light.text-decoration-none(onclick='window.location.href="'+HOST+'/'+NavLinks["en"][site]+'"+location.search')
                            | English 
                            i.fas.fa-globe
                    else if LANG=="en"
                        button#changeLang.btn.btn-link.text-light.text-decoration-none(onclick='window.location.href="'+HOST+'/'+NavLinks["es"][site]+'"+location.search')
