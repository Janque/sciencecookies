{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "site": "sciencecookies",
    "public": "public",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/galletas/**/**",
        "function": "dynCookies-showCookie"
      },
      {
        "source": "/vista-email/**",
        "function": "dynCookies-showCookie"
      },
      {
        "source": "/calendario-astronomico",
        "function": "dynAllCals-showAllCal"
      },
      {
        "source": "/calendario-astronomico/*",
        "function": "dynAllCals-showAllCal"
      },
      {
        "source": "/calendario-astronomico/*/*",
        "function": "dynCalendars-showCalendar"
      },
      {
        "source": "/vista-email-calendario/*",
        "function": "dynCalendars-showCalendar"
      },
      {
        "source": "/archivo",
        "function": "dynArchive-showArchive"
      },
      {
        "source": "/archivo/**/**",
        "function": "dynArchive-showArchive"
      },
      {
        "source": "/sitemap.xml",
        "function": "sitemap-serveSitemap"
      }
    ],
    "redirects": [
      {
        "source": "/archivo/2020/ago-sep",
        "destination": "/archivo/2020/jul-sep",
        "type": 301
      },
      {
        "source": "/galletas/202007/:post*",
        "destination": "/galletas/202008/:post",
        "type": 301
      },
      {
        "regex": "/(.*/?)*(\\.html)",
        "destination": "/:1",
        "type": 301
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true
    }
  }
}